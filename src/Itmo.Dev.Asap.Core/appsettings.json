{
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.Extensions.Http": "Information",
        "System.Net.Http.HttpClient": "Information",
        "Grpc.Net.Client": "Information",
        "Grpc.AspNetCore.Server": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:T} [{Level:u3}] {SourceContext} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Serilogs/asap-core/AppLogs_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {SourceContext} {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Sentry": {
    "Enabled": true,
    "Environment": "",
    "Dsn": "",
    "Debug": false,
    "TracesSampleRate": 1.0,
    "MinimumEventLevel": "Warning"
  },
  "Platform": {
    "Environment": "",
    "YandexCloud": {
      "ServiceUri": "",
      "LockBox": {
        "SecretId": ""
      }
    }
  },
  "Infrastructure" : {
    "DataAccess" : {
      "PostgresConfiguration" : {
        "Host": "",
        "Database": "",
        "Port": -1,
        "Username": "",
        "Password": "",
        "SslMode": "Prefer"
      }
    }
  },
  "Presentation": {
    "Kafka": {
      "Producers": {
        "AssignmentCreated": {
          "Topic": "asap_assignment"
        },
        "QueueUpdated": {
          "Topic": "asap_queue_updated"
        },
        "SubjectCourseCreated": {
          "Topic": "asap_subject_course"
        },
        "SubjectCoursePointsUpdated": {
          "Topic": "asap_subject_course_points"
        }
      }
    }
  }
}
